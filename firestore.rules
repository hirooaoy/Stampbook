rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==================== HELPER FUNCTIONS ====================
    
    // Define admin users who can manage stamps and collections
    function isAdmin() {
      return request.auth != null && request.auth.uid in [
        'LGp7cMqB2tSEVU1O7NEvR0Xib7y2',  // hiroo (primary admin)
        'mpd4k2n13adMFMY52nksmaQTbMQ2'   // watagumostudio (secondary admin)
      ];
    }
    
    // ==================== ADMIN CONTENT ====================
    
    // Stamps - curated locations
    match /stamps/{stampId} {
      allow read: if true;  // Public - anyone can view stamps
      allow write: if isAdmin();  // Only admins can add/edit/delete stamps
    }
    
    // Collections - curated groups
    match /collections/{collectionId} {
      allow read: if true;  // Public - anyone can view collections
      allow write: if isAdmin();  // Only admins can add/edit/delete collections
    }
    
    // Content pages - rich content for local businesses, creators, and app info
    match /contentPages/{contentPageId} {
      allow read: if true;  // Public
    }
    
    // Stamp statistics - how many people collected each stamp
    match /stamp_statistics/{stampId} {
      allow read: if true;  // Public
      // Rate limit: 1 update per 30 seconds per stamp per user
      // Prevents spam while allowing legitimate undo/redo of collections
      allow create: if request.auth != null;
      allow update: if request.auth != null 
        && (
          !('lastUpdated' in resource.data) ||  // First update (no lastUpdated field yet)
          request.time > resource.data.lastUpdated + duration.value(30, 's')  // 30 sec cooldown
        );
    }
    
    // ==================== USER CONTENT ====================
    
    // User profiles
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, delete: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;  // Users can only update their own profile
    }
    
    // User's collected stamps (their posts)
    match /users/{userId}/collected_stamps/{stampId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }
    
    // IMPORTANT: Allow collectionGroup queries for Instagram-style feed
    // This enables fetchFollowingFeed() to search across all users' collected_stamps chronologically
    match /{path=**}/collected_stamps/{stampId} {
      allow read: if request.auth != null;
    }
    
    // ==================== SOCIAL FEATURES ====================
    
    // Following: who this user follows (only need this one subcollection)
    match /users/{userId}/following/{followingId} {
      allow read: if request.auth != null;
      allow create, delete: if request.auth.uid == userId;  // Users can only manage their own following list
    }
    
    // IMPORTANT: Allow collectionGroup queries for follower list
    // This enables fetchFollowers() to search across all users' following subcollections
    match /{path=**}/following/{followingId} {
      allow read: if request.auth != null;
    }
    
    // Likes
    match /likes/{likeId} {
      allow read: if request.auth != null;
      // Validation: Ensure likes are properly attributed and timestamped
      // Note: Rate limiting implemented client-side for MVP (<100 users)
      // TODO: POST-MVP - Move to Cloud Function for server-side rate limiting (>500 users)
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.createdAt is timestamp;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Comments
    match /comments/{commentId} {
      allow read: if request.auth != null;
      // Validation: Require text, userId, postId, timestamps
      // Rate limiting note: Max comment length prevents storage abuse
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.text is string
        && request.resource.data.text.size() > 0
        && request.resource.data.text.size() <= 1000  // Max 1000 chars prevents abuse
        && request.resource.data.createdAt is timestamp;
      allow delete: if request.auth != null && 
                       (resource.data.userId == request.auth.uid ||  // Your own comment
                        resource.data.postOwnerId == request.auth.uid);  // Or your post
    }
    
    // ==================== INVITE SYSTEM ====================
    
    // Invite codes - control app growth
    match /invite_codes/{code} {
      // Anyone can read a SPECIFIC code by its ID (for validation during signup)
      // This allows app to check if code exists and is active
      allow get: if true;
      
      // CANNOT list/query all codes (prevents scraping valid codes)
      allow list: if false;
      
      // Only admin service account can create/update codes (via generate_invite_codes.js)
      // Regular users cannot write codes
      allow write: if false;
    }
    
    // ==================== FEEDBACK ====================
    
    // User feedback (admin only reads)
    match /feedback/{feedbackId} {
      // Admins can read all feedback
      allow read: if isAdmin();
      
      // Validation: Require message, limit size to prevent abuse
      // Allow both authenticated users and anonymous submissions
      allow create: if (
        // For authenticated users, verify userId matches
        (request.auth != null && request.resource.data.userId == request.auth.uid) ||
        // For anonymous users, allow if userId is "anonymous"
        (request.resource.data.userId == "anonymous")
      )
        && request.resource.data.message is string
        && request.resource.data.message.size() > 0
        && request.resource.data.message.size() <= 5000  // Max 5000 chars
        && request.resource.data.createdAt is timestamp;
    }
    
    // Stamp suggestions (user-submitted stamp and collection suggestions)
    match /stamp_suggestions/{suggestionId} {
      // Admins can read all suggestions, users can read their own
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      
      // Allow authenticated users to create suggestions
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.stampName is string
        && request.resource.data.stampName.size() > 0
        && request.resource.data.fullAddress is string
        && request.resource.data.fullAddress.size() > 0
        && request.resource.data.additionalNotes is string
        && request.resource.data.additionalNotes.size() > 0
        && request.resource.data.createdAt is timestamp;
    }
  }
}
